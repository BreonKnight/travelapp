<h1>Edit User Profile</h1>

<%= form_for @user do |f| %>
  <%= f.label(:first_name, "First Name") %>
  <%= f.text_field :first_name, class: "form-control", placeholder: "John" %>
  <br>
    <%= f.label(:last_name, "Last Name") %>
  <%= f.text_field :last_name, class: "form-control", placeholder: "Doe" %>
  <br>
  <%= f.label :current_city_id, "Your current city" %><br>
  <%= f.select :current_city_id, City.all.collect { |c| [ c.name, c.id ] }, include_blank: false %>
  <br>
  <%= f.submit "Save User Profile", class: "btn btn-block btn-default" %>
<% end %>
</div>
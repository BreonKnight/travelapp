<h1>User Profile</h1>
<hr>
<div>
	<p>Hello <%= @user.first_name %> <%= @user.last_name %>,</p>
	<p><strong>Email:</strong> <%= @user.email %></p>
	<p class="small text-muted">Joined <%= time_ago_in_words(@user.created_at) %> ago</p>

	<a href="/users/<%= @user.id %>/edit" class= "btn btn-default btn-lg">
	  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
	</a>
</div>
<hr>
<div>
	<strong>My Blog Posts:</strong>
	<br><br>
	<% @entries.each do |entry| %>
	 	<p style="margin-left: 40px"><%= link_to entry.title, entry_path(entry) %></p>
	 <br>
	<% end %>	
</div>

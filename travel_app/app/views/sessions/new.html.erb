<h1>Login</h1>
<hr>

<div class="form-group">
<%= form_for @user, url: "/sessions", method: "post" do |f| %>
  <%= f.label(:email, "Email") %>
  <%= f.email_field :email, class: "form-control", placeholder: "email@example.com" %>
  <br>
  <%= f.label(:password, "Password") %>
  <%= f.password_field :password, class: "form-control", placeholder: "your password" %>
  <br>
  <%= f.submit "Login", class: "btn btn-block btn-default" %>
<% end %>
</div>

<br>
<p>Don't have an account? <a href="/signup">Click here</a> to sign up.</p>